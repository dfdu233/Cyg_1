/* page.wxss */
.container {
  width: 85%;
  margin: 50rpx auto;
  box-shadow: 0 0 20rpx #a1a1a1;
  border-radius: 25rpx;
  padding: 25rpx;
  justify-content: center;
  align-items: center;
}

.section {
  margin-bottom: 20rpx;
  border: 1rpx solid #dddddd;
  padding: 10rpx;
  border-radius: 5rpx;
}

.inputAmount {
  border: 1rpx solid #dddddd;
  padding: 5rpx;
  border-radius: 5rpx;
}

.rechargeBtn {
  width: 85% !important;
  color: rgb(250, 250, 250);
  background-color: rgb(0, 0, 0);
  padding: 20rpx 0;
  border-radius: 40rpx;
  margin-top: 60rpx;
  font-weight: 400;
  margin-bottom: 10rpx;
  bottom: 15rpx;
}