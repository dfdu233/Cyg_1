page {
  background-color: #fff;
}

.body {
  width: 90%;
  margin: 50rpx auto;
  box-shadow: 0 0 20rpx #a1a1a1;
  border-radius: 20rpx;
  padding: 20rpx 0;

}

.item {
  display: flex;
  justify-content: space-between;
  width: 85%;
  padding: 20rpx 0;
  margin: 0 auto;
  border-bottom: 2rpx solid #a1a1a1;
  align-items: center;
}

.shijianyaoqiu {
  display: flex;
  justify-content: space-between;
  width: 85%;
  padding: 20rpx 0;
  margin: 0 auto;
  align-items: center;
}

.time{
	display: flex;
  justify-content: space-between;
  width: 85%;
  padding: 20rpx 0;
  margin: 0 auto;
	align-items: center;
	border-bottom: 2rpx solid #a1a1a1;
}

/*边框*/
.time view {
  border: 2rpx solid #d1d1d1;
  padding: 20rpx 30rpx;
  color: #a1a1a1;
}

.selectType {
  color: #f00 !important; /*以这个样式为主，防止别替换*/
  border-color: #f00 !important;
}

.item .addImage {
  font-size: 30rpx;
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  border: 1rpx dashed #000;
}

.item .addImage image {
  width: 100%;
  height: 100%;
}

.item text:nth-child(2) {
  color: #a1a1a1;
}

.item input {
  text-align: right;
}

.color_red {
  color: #f00;
}

.tips {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.tips .tips_money {
  display: flex;
  flex-direction: column;
  color: #686868;
  margin: 12px 0;
}

.tips .money {
  margin-top: 20rpx;
  font-weight: bold;
}

.body .submitBtn {
  width: 85%;
  color: #fff;
  background-color: #000000;
  padding: 20rpx 0;
  border-radius: 40rpx;
  font-weight: 400;
  margin-bottom: 10rpx;
  margin-top: 85rpx;
  bottom: 35rpx;
}

.notice {
  color: #1067D1;
  text-align: center;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
}

.uploadFile {
  display: flex;
  align-items: center;
}

.uploadFile text {
  font-weight: bold;
  margin-right: 2rpx;
}