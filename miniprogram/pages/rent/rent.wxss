/* pages/trade/trade.wxss */
page {
  background-color: #fff;
}
.body {
  width: 85%;
  margin: 20rpx auto;
  box-shadow: 0 0 20rpx #a1a1a1;
  border-radius: 25rpx;
  padding: 25rpx;
  justify-content: center;
  align-items: center;
}

/* 我要租+我要出租 */
.container {  
  display: flex;  
  justify-content: space-between;  
  align-items: center;  
}  
.select {
  color: rgb(0, 0, 0);
  border-bottom: 6rpx solid #FF6302;
}

.tab {
  display: flex;
  text-align: center;
}

.tab .tab_item {
  height: 90rpx;
  width: 50rpx;
  display: inline-block;
  line-height: 90rpx;
  margin: 0 10rpx;
  padding: 0 20rpx;
  flex: 5; /*平均分配Tab的长度*/
}


.left-part {  
  flex: 1;  
  display: flex;  
  justify-content: center;  
  align-items: flex-end;  
}  
  
.text {  
	font-size: 32rpx; /* 设置字体大小为 16px */  
  color: #FF6302;  
}  
  
.right-part {  
  flex: 1;  
  display: flex;  
  justify-content: center;  
}  
  
  
.category-header {  
  display: flex;  
  justify-content: space-between;  
  align-items: center;  
  padding: 5rpx;  
}  
  
.category-label {  
	font-weight: bold;  
	color: #000; /* 可根据需要设置字体颜色 */  
}  


.category-buttons {  
	width: 530rpx;
  display: flex;  
  justify-content: space-around;  
  margin-top: 5rpx;  
}  

/* detail详情介绍开始 */  
.detail {
  display: flex;
  justify-content:space-between;
  margin-top: 20rpx;
  border: 2rpx solid gray; /* 灰色边框 */  
  padding: 10rpx; /* 内边距 */  
  margin-top: 30rpx; /* 离顶部的距离 */  
  border-radius: 20rpx 20rpx 20rpx 20rpx; /* 圆角效果，四个方向的半径分别为左上、右上、右下、左下 */ 
}

.box {
  flex-grow: 1;
  padding: 5px;
}

.text {
  margin-bottom: 5px;
text-align: center;  
}
/* detail详情介绍结束 */  



