.scroll_view {
  background-color: #fff;
  white-space: nowrap; /*不能换行*/
}

.tab {
  display: flex;
  text-align: center;
}

.tab .tab_item {
  height: 100rpx;
  display: inline-block;
  line-height: 90rpx;
  margin: 0 10rpx;
  padding: 0 20rpx;
  flex: 1; /*平均分配Tab的长度*/
}

.select {
  color: rgb(0, 0, 0);
  border-bottom: 6rpx solid #FF6302;
}
.tab_next{
	height: 70rpx;
  display: flex;
  justify-content: space-around;
}
.selected {
  color: rgb(0, 0, 0); /* 设置选中状态的文字颜色 */
  border-bottom: 6rpx solid #FF6302; /* 添加下划线 */
}


/*向上划动更新信息*/
.body .tips {
  width: 100%;
  background-color: #5a9ae7;
  text-align: center;
  color: #fff;
  padding: 10rpx 0;
}

.order {
  background-color: #fff;
  width: 85%;
  margin: 0 auto;
  border-radius: 25rpx;
  padding: 25rpx;
  margin-top: 30rpx;
}

.order .order_top {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order .order_top .top_left {
  display: flex;
}

.order .order_top .top_left image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.order .order_top .top_left .name {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.order .order_top .top_left .name text:nth-child(2) {
  color: #aaa;
  font-size: 26rpx;
}

/* 待帮助状态 */
.order .order_top .top_right {
  color: rgb(0, 255, 0);
  background-color: rgba(5, 241, 5, 0.2);
  padding: 10rpx 25rpx;
  border: 15rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.order .order_content {
  padding-left: 70rpx;
  padding-top: 20rpx;
}

.order .order_content .address {
  color: #1067D1;
  font-size: 30rpx;
}

.order .order_bottom {
  display: flex;
  justify-content: flex-end; /*末尾*/
  margin-top: 15rpx;
}

/*金额*/
.order .order_bottom .money {
  color: rgb(255, 0, 0);
  background-color: rgba(189, 101, 101, 0.2);
  padding: 10rpx 25rpx;
  border-radius: 10rpx;
  font-size: 30rpx;
  font-weight: bold;
}

/*接单*/
.order .order_bottom .accept {
  color: #fff;
  background-color: #1E90FF;
  padding: 15rpx 50rpx;
  margin-left: 15rpx;
  border-top-left-radius: 15rpx;
  border-bottom-right-radius: 15rpx;
  font-size: 30rpx;
}

/* 已完成状态 */
.order .order_top .top_right_finish {
  color: rgb(255, 0, 0);
  background-color: rgb(235, 236, 222);
  padding: 10rpx 25rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  font-weight: bold;
}

/* 已帮助状态 */
.order .order_top .top_right_help {
  color: rgb(16, 103, 209);
  background-color: rgba(16, 103, 209, .2);
  padding: 10rpx 25rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.helpOrderInfo {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  background-color: #fff;
  padding: 35rpx 0;
}

.helpOrderInfo .orderNum, .orderMoney {
  width: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.helpOrderInfo .orderNum text:first-child, .orderMoney text:first-child {
  font-weight: bold;
  font-size: 26rpx;
}

.helpOrderInfo .orderNum text:last-child, .orderMoney text:last-child {
  color: #a1a1a1;
}

/*已显示全部*/
.showAll {
  color: #717171;
  margin-top: 60rpx;
  display: flex;
  justify-content: center; /*水平居中*/
  align-items: center; /*垂直居中*/
}

.showAll text {
  margin: 0 20rpx;
}