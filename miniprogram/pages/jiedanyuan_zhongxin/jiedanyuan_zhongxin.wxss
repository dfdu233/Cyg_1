page {
  background-color: #fff;
}
.body {
  width: 85%;
  margin: 20rpx auto;
  box-shadow: 0 0 20rpx #a1a1a1;
  border-radius: 25rpx;
  padding: 25rpx;
  justify-content: center;
  align-items: center;
}
.container {  
  display: flex;  
  justify-content: space-between;  
  align-items: center;  
}  
.changan_1 {
font-size: 35rpx;
color: green;
margin-left: 10rpx;
margin-top: 50rpx;
}
.changan_2 {
