page {
  background-color: #fff;
}

.body {
  background-color: #fff;
  width: 85%;
  margin: 30rpx auto;
  border-radius: 30rpx;
  box-shadow: 0 0 15rpx #a1a1a1;
  padding: 40rpx 25rpx 25rpx 25rpx;
}

.container .title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 90%;
  margin: 0 auto;
  margin-top: 20rpx;
}

.type {
  display: flex;
  margin: 0 auto;
  width: 90%;
  margin-top: 20rpx;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #d1d1d1;
  display: flex;
  justify-content: center;
}

/*边框*/
.type view {
  border: 2rpx solid #d1d1d1;
  padding: 20rpx 30rpx;
  color: #a1a1a1;
}

.selectType {
  color: #f00 !important; /*以这个样式为主，防止别替换*/
  border-color: #f00 !important;
}


.help_content {
  width: 95%;
  margin: 0 auto;
  margin-top: 20rpx;
}

.help_content .detail {
  position: relative;
}

.help_content textarea {
  border: 1rpx solid #d1d1d1;
  margin-top: 20rpx;
  padding: 20rpx;
  width: 90%;
}

.help_content .detail .getImg {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right: 60rpx;
  bottom: 40rpx;
  z-index: 10;
}

.help_content .detail .imgUrl {
  width: 80rpx;
  height: 100rpx;
  position: absolute;
  left: 60rpx;
  bottom: 40rpx;
}

.item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  width: 95%;
  border-bottom: 2rpx solid #a1a1a1;
  margin: 0 auto;
}

.daxiao{
	display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  width: 95%;
  margin: 0 auto;
}

.item .getAddress {
  display: flex;
}

.item .getAddress input {
  text-align: right;
}

.item .getAddress image {
  width: 40rpx;
  height: 40rpx;
  margin-left: 10rpx;
}

.item text:nth-child(2) {
  color: #a1a1a1;
}

.item input {
  text-align: right;
}

.tips {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.tips text {
  margin-top: 25rpx;
}

.tips text:nth-child(1) {
  color: #717171;
}

.tips text:nth-child(2) {
  color: #f00;
}

.tips text:nth-child(4) {
  color: #f00;
  font-weight: bold;
}

.submitBtn {
  width: 85% !important;
  color: #fff;
  background-color: #000000;
  padding: 20rpx 0;
  border-radius: 40rpx;
  margin-top: 60rpx;
  font-weight: 400;
  margin-bottom: 10rpx;
  bottom: 25rpx;
}

.notice {
  color: #1067D1;
  text-align: center;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}

.showWidth {
  width: 80% !important;
}